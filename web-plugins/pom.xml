    	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
  
  	<developers>
		<developer>
			<id>joerg.wurzer</id>
			<name>JÃ¶rg Wurzer</name>
			<email>joerg.wurzer@iqser.net</email>
			<organization>IQser GmbH</organization>
